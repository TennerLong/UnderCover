<!DOCTYPE html>
<html>
  <head>
    <title>欢迎<%= nickName %>来到<%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <style>
      * { margin: 0; padding: 0; box-sizing: border-box; }
      body { font: 13px Helvetica, Arial; }
      form { background: #000; padding: 3px; position: fixed; bottom: 0; width: 100%; }
      form input { border: 0; padding: 10px; width: 90%; margin-right: .5%; }
      form button { width: 9%; background: rgb(130, 224, 255); border: none; padding: 10px; }
      #messages { list-style-type: none; margin: 0; padding: 0; margin-bottom: 100px; }
      #messages li { padding: 5px 10px; }
      #messages li:nth-child(odd) { background: #eee; }
    </style>
    <script src="/javascripts/jquery-1.11.1.js"></script>
  </head>
  <body>
      <ul id="messages"></ul>
      <form action="">
        <input id="m" autocomplete="off" autofocus="true" /><button>发射</button>
      </form>

      <script src="/socket.io/socket.io.js"></script>
      <script>
        var socket = io();
        $('form').submit(function(){
          var sendmsg = $('#m').val();
          socket.emit('chat message', sendmsg);
          $('#m').val('');
          return false;
        });
        socket.on('chat message', function(msg){
          $('#messages').append($('<li>').text(msg));
          $(document).scrollTop( $('#messages')[0].scrollHeight);
        });
        socket.on('server message', function(msg){
          $('#messages').append($('<li style="color:red;">系统提示：').text(msg));
          $(document).scrollTop( $('#messages')[0].scrollHeight);
        });

        socket.on('my keywords', function(msg){
          $('#messages').append($('<li style="color:blue">关键词信息：').text(msg));
          $(document).scrollTop( $('#messages')[0].scrollHeight);
        });
      </script>
  </body>
</html>
